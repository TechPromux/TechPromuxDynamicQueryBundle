<div id="datamodel-filters-modal-{{ object.id }}" style="display: none;" class="modal fade modal-overflow" tabindex="-1"
     role="dialog" aria-labelledby="datamodel-filters-modal-title-{{ object.id }}" aria-hidden="true">

    <div class="modal-dialog modal-lg" style="z-index: 1500">

        <div class="modal-content" style="border-radius: 0px; height: 100%; padding: 0px;" data-spy="scroll"
             data-target="#datamodel-filters-modal-body-{{ object.id }}">

            <div id="datamodel-filters-modal-header-{{ object.id }}" class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
                <h4 class="modal-title"
                    id="datamodel-filters-modal-title-{{ object.id }}">{{ 'datamodel.execute.filter.title' | trans({},admin.getResourceManager().getBundleName()) }}
                    "{{ object.title }}"</h4>
            </div>

            <div id="datamodel-filters-modal-body-{{ object.id }}" class="modal-body"
                 style="min-height: 380px; max-height: 450px; overflow: auto !important;">
                <form id="datamodel-filters-form-{{ object.id }}" method="post"
                      action="{{ admin.generateObjectUrl('execute', object) }}" autocomplete="off">
                    <fieldset>
                        {% for field in 0..(filter.form._filters_count.vars.attr.value-1) %}
                            <div class="form-group row">
                                {{ form_label(filter.form['id_'~loop.index0]) }}
                                <div class="col-lg-9">
                                    {{ form_widget(filter.form['id_'~loop.index0]) }}
                                    {{ form_widget(filter.form['operator_'~loop.index0]) }}
                                    {{ form_widget(filter.form['value_'~loop.index0]) }}
                                </div>

                            </div>
                        {% endfor %}
                        {{ form_rest(filter.form) }}
                    </fieldset>
                </form>
            </div>

            <div id="datamodel-filters-modal-footer-{{ object.id }}" class="modal-footer">
                <span class="hide error-message"><b class="error danger"
                                                    style="color:red;">{{ 'datamodel.execute.filter.error.msg' | trans({},admin.getResourceManager().getBundleName()) }}</b></span>
                <button type="submit" class="btn btn-primary"
                        form="datamodel-filters-form-{{ object.id }}">{{ 'datamodel.execute.filter.button.submit' | trans({},admin.getResourceManager().getBundleName()) }}</button>
                <button type="reset" class="btn btn-info"
                        form="datamodel-filters-form-{{ object.id }}">{{ 'datamodel.execute.filter.button.reset' | trans({},admin.getResourceManager().getBundleName()) }}</button>
            </div>

        </div>

    </div>
</div>