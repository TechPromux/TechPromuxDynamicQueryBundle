<div id="tpx-dq-query-filters-form-modal-{{object.id}}" style="display: none;" class="modal fade modal-overflow" tabindex="-1" role="dialog" aria-labelledby="tpx-dq-query-filters-form-modal-title-{{object.id}}" aria-hidden="true">

    <div class="modal-dialog modal-lg" style="z-index: 1500">

        <div class="modal-content" style="border-radius: 0px; height: 100%; padding: 0px;" data-spy="scroll" data-target="#tpx-dq-query-filters-form-modal-body-{{object.id}}">

            <div id="tpx-dq-query-filters-form-modal-header-{{object.id}}" class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                <h4 class="modal-title" id="tpx-dq-query-filters-form-modal-title-{{object.id}}">{{'Filter Result from' | trans({},'TechPromuxDynamicQueryBundle')}} "{{ object.title }}"</h4>
            </div>

            <div id="tpx-dq-query-filters-form-modal-body-{{object.id}}" class="modal-body" style="min-height: 380px; max-height: 450px; overflow: auto !important;">
                <form id="tpx-dq-query-filters-form-{{object.id}}" method="post" action="{{admin.generateObjectUrl('execute', object)}}" autocomplete="off">
                    <fieldset>
                        {% for d in 0..(filters_form._filters_count.vars.attr.value-1) %}
                            <div class="form-group row">
                                {{ form_label(filters_form['id_'~loop.index0]) }}
                                <div class="col-lg-9">
                                    {{ form_widget(filters_form['id_'~loop.index0]) }}
                                    {{ form_widget(filters_form['operator_'~loop.index0]) }}
                                    {{ form_widget(filters_form['value_'~loop.index0]) }}
                                </div>

                            </div>     
                        {% endfor%}    
                        {{ form_rest(filters_form) }}
                    </fieldset>    
                </form>
            </div>

            <div id="tpx-dq-query-filters-form-modal-footer-{{object.id}}" class="modal-footer">
                <span class="hide error-message"><b class="error danger" style="color:red;">{{'ERROR!!!. Filter data isn´t valid. Please, verify inserted values.' | trans({},'TechPromuxDynamicQueryBundle')}}</b></span>
                <button type="submit" class="btn btn-primary" form="tpx-dq-query-filters-form-{{object.id}}">{{'Filter' | trans({},'TechPromuxDynamicQueryBundle')}}</button>
                <button type="reset" class="btn btn-info" form="tpx-dq-query-filters-form-{{object.id}}">{{'Reset' | trans({},'TechPromuxDynamicQueryBundle')}}</button>
            </div>

        </div>

    </div>
</div>